#news-items
  .content-block-item.content-block-item-header
    %h3.content-heading
      = raw t :'searches.news_about_query',
          news_label: h(search.affiliate.rss_govbox_label),
          query: content_tag(:span, search.query)
  - unique_news_items(search.news_items.results).first(3).each_with_index do |news_item, index|
    = render partial: 'govbox_news_item', locals: { affiliate: search.affiliate, news_item: news_item, position: index + 1 }
