.content-block-item.result.collapsible-item{ featured_collection_class_hash(result), id: "best-bet-#{position}" }
  = featured_collection_image result
  .title-and-links
    %h4.title= link_to_result_title(result.title, result.title_url, position, 'BBG')
    .links
      = render partial: 'featured_collection_links_list',
        locals: { result: result,
                  position: position,
                  featured_collection_links_list: featured_collection_links_list(result) }
