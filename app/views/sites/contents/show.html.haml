= content_for_site_page_title @site, 'Content Overview'
.sub-nav-heading
  %h2 Content Overview
  .action-bar
    %ul
      = list_item_with_link_to_current_help_page

= render_flash_message
%ul.content
  %li.content-item.domains
    = link_to site_domains_path(@site) do
      %i.fa.fa-globe-lightblue.fa-4x
      %div.name Domains
  %li.content-item
    = link_to site_collections_path(@site) do
      %span.no-icon Collections
  - if @site.gets_i14y_results
    %li.content-item
      = link_to site_i14y_drawers_path(@site) do
        %span.no-icon i14y Drawers
  %li.content-item
    = link_to site_best_bets_texts_path(@site) do
      %span.no-icon Best Bets: Text
  %li.content-item
    = link_to site_best_bets_graphics_path(@site) do
      %span.no-icon Best Bets: Graphics
  %li.content-item.routed-queries
    = link_to site_routed_queries_path(@site) do
      %span.no-icon Routed Queries
  %li.content-item.rss
    = link_to site_rss_feeds_path(@site) do
      = image_tag 'sites/rss_logo.png', alt: 'YouTube logo', style: 'text-align: center'
      %div.name RSS
  %li.content-item.youtube
    = link_to site_youtube_channels_path(@site) do
      = image_tag 'sites/youtube_logo.png', alt: 'YouTube logo'
      %div.name YouTube
  %li.content-item.twitter
    = link_to site_twitter_handles_path(@site) do
      = image_tag 'sites/twitter_logo.png', alt: 'Twitter logo'
      %div.name Twitter
  %li.content-item.flickr
    = link_to site_flickr_urls_path(@site) do
      = image_tag 'sites/flickr_logo.png', alt: 'Flickr logo'
      %div.name Flickr

= form_tag site_autodiscovery_path(@site), id: 'autodiscovery'
= label_tag :autodiscovery_url, 'Discover and add the RSS feeds and social media accounts listed on the following page:'
= url_field_tag :autodiscovery_url, h(@autodiscovery_url), maxlength: 255, placeholder: 'http://yoursite.gov', type: 'url', required: true
= button_tag "Discover", id: 'discover', class: "btn btn-success"
%br (You can run this scan on as many pages as you'd like if your feeds and accounts are listed on multiple pages.)
