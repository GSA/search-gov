= content_for_site_page_title @site, 'Edit Routed Query'
= custom_form_for @routed_query, url: { action: :update }, html: { class: 'form' }  do |form|
  .sub-nav-heading
    %h2 Edit Routed Query
    .action-bar
      %ul
        %li= link_to 'View All', site_routed_queries_path(@site)
        %li= form.submit 'Save', class: 'btn submit disabled', disabled: true
  = render form
